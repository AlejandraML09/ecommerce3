{{#if carrito.length}}
    {{#each carrito}}
        <div class="cart-item">
            <div class="cart-image-container">
                <img
                    class="cart-image-container__image"
                    src="{{foto}}"
                    alt="foto de {{nombre}}"
                />
            </div>
            <div class="cart-item-description">
                <div>
                    <h3>{{nombre}}</h3>
                    <h4>${{precio}}</h4>
                    <p>{{marca}}</p>
                    <p>Cantidad:{{cantidad}}</p>
                    {{#if envio}}
                        <p>Envío: Si</p>
                    {{else}}
                        <p>Envío: No</p>
                    {{/if}}
                </div>
                <div class="cart-item-button">
                    <button
                        onclick="carritoController.borrarProducto('{{id}}')"
                    ><i class="far fa-trash-alt"></i></button>
                </div>
            </div>
        </div>

    {{/each}}
    <button
        class="btn__enviarCarrito"
        onclick="carritoController.enviarCarrito()"
    >Comprar</button>
{{else}}
    <h2>El carrito está vacío</h2>
{{/if}}